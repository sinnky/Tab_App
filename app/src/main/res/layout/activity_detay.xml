<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetayActivity"
    android:layout_margin="20dp">

    <ImageView
        android:id="@+id/MasalDetayResim"
        android:layout_marginTop="5dp"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/common_full_open_on_phone" />


    <TextView
        android:id="@+id/MasalDetayAdi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/MasalDetayResim"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="www" />
    <ScrollView
        android:layout_below="@+id/MasalDetayAdi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/masalDetayAciklamasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/MasalDetayAdi"
            android:layout_marginTop="10dp"
            android:text="Aciklama"
            android:paddingBottom="20dp"
            />

    </ScrollView>


</RelativeLayout>